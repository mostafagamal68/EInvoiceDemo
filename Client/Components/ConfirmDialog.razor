@inherits GeneralComponent
<div class="d-flex flex-column justify-content-center align-items-center">
    <h1 class="my-0 text-warning mx-1"><i class="bi bi-exclamation-triangle"></i></h1>
    <h5 class="my-0">@Text</h5>
    <div class="d-flex justify-content-around align-items-center">
        <button type="button" class="btn btn-danger mx-1" @onclick="Confirm">Confirm</button>
        <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
    </div>
</div>
@code {
    [Parameter]
    public string Text { get; set; }

    [CascadingParameter] BlazoredModalInstance BlazoredModal { get; set; } = default!;
    private async Task Confirm() => await BlazoredModal.CloseAsync(ModalResult.Ok(true));
    private async Task Cancel() => await BlazoredModal.CancelAsync();

}
