@page "/Customer/{Id:guid?}"
@using EInvoiceDemo.Shared.DTOs.Customers
@implements IForm

<Form TDto=CustomerDto
      TFilter=CustomersFilter
      OnLoadCreate="async form => form.Dto.Code = await form.Service.GetCode()"
      Id=Id>
    <Field Name="Code" For="() => context.Code">
        <InputNumber class="form-control" @bind-Value="context.Code" />
    </Field>

    <Field Name="Name" For="() => context.CustomerName">
        <InputText class="form-control" @bind-Value="context.CustomerName" />
    </Field>
</Form>

@code {
    [Parameter]
    public Guid? Id { get; set; }
}
