@page "/Tax/{Id:decimal}"
@using EInvoiceDemo.Shared.DTOs.Tax
@implements IForm

<Form TDto=TaxDto
      TFilter=TaxesFilter
      OnLoadCreate="async form => form.Dto.Code = await form.Service.GetCode()"
      Id=Id>
    <Field Name="Code" For="() => context.Code">
        <InputNumber class="form-control" @bind-Value="context.Code" />
    </Field>

    <Field Name="Name" For="() => context.TaxName">
        <InputText class="form-control" @bind-Value="context.TaxName" />
    </Field>

    <Field Name="Description" For="() => context.TaxDescription">
        <InputTextArea class="form-control" @bind-Value="context.TaxDescription" />
    </Field>
</Form>

@code {
    [Parameter]
    public Guid? Id { get; set; }
}
