<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">E-Invoice</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house oi" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Items" Match="NavLinkMatch.Prefix">
                <span class="bi bi-diagram-3 oi" aria-hidden="true"></span> Items
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Customers" Match="NavLinkMatch.Prefix">
                <span class="bi bi-person-gear oi" aria-hidden="true"></span> Customers
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Taxes" Match="NavLinkMatch.Prefix">
                <span class="bi bi-tag oi" aria-hidden="true"></span> Taxes
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="EInvoices" Match="NavLinkMatch.Prefix">
                <span class="bi bi-receipt oi" aria-hidden="true"></span> E-Invoices
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
